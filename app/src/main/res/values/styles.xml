<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Transparent" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonText">
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/selector_button_accent_30</item>
    </style>

    <style name="ButtonText.Border" parent="ButtonText">
        <item name="android:textColor">@color/colorBlue</item>
        <item name="android:background">@drawable/selector_button_accent_border_30</item>
    </style>

    <style name="Edittext">
        <item name="android:lines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingStart">25dp</item>
        <item name="android:paddingEnd">25dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textColor">@color/colorBlue</item>
        <item name="android:textColorHint">@color/colorGrey</item>
        <item name="android:background">@drawable/bg_accent_border_30</item>
    </style>

</resources>
