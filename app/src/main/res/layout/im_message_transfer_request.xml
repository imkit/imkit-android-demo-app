<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="242dp"
    android:layout_height="244dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="242dp"
        android:layout_height="244dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/im_transfer_request_bg_top">

            <ImageView
                android:id="@+id/im_transaction_cover_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                tools:src="@drawable/ic_transfer_in" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/im_transaction_action_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/im_transfer_request_bg_bottom"
            android:orientation="vertical"
            android:paddingStart="14dp"
            android:paddingTop="12dp"
            android:paddingEnd="14dp"
            android:paddingBottom="12dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/im_message_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:includeFontPadding="false"
                android:lineSpacingExtra="4dp"
                android:lineSpacingMultiplier="1"
                android:textColor="#474747"
                android:textSize="14sp"
                tools:text="You have sent a payment request on May 18, 2021 3:22 PM" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif"
                android:includeFontPadding="false"
                android:text="View records"
                android:textColor="#ec008c"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>